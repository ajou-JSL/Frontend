<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MOUM" parent="Theme.Material3.Light.NoActionBar">
    </style>
    <style name="Theme.MOUM" parent="Base.Theme.MOUM">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/gray0</item> <!-- 상태바 색상 설정 -->
        <item name="android:windowLightStatusBar">true</item> <!-- 상태바 아이콘을 어두운 색으로 설정 -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>