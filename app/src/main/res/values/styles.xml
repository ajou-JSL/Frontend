<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_top_rounded_white</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomCheckboxPersonalAgree" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/gray5</item>
        <item name="android:colorControlActivated">@color/neon_mint_bold</item>
        <item name="android:colorControlHighlight">@color/neon_mint</item>
    </style>

    <style name="RangeSliderStyle" parent="Widget.MaterialComponents.Slider">
        <!-- Thumb customization -->
        <item name="thumbColor">@color/gray4</item>
        <item name="thumbStrokeColor">@color/gray3</item>
        <item name="thumbWidth">5dp</item>
        <item name="thumbHeight">25dp</item>

        <!-- Track customization -->
        <item name="trackColorActive">@color/gray3</item>
        <item name="trackColorInactive">@color/gray2</item>
        <item name="trackHeight">12dp</item>
        <!-- Adjust the thickness -->

        <!-- Tick marks customization -->
        <item name="tickColor">@color/transparent</item>
        <item name="tickColorActive">@color/transparent</item>


        <item name="colorPrimary">@color/gray1</item>
        <item name="colorOnPrimary">@color/gray4</item>
        <item name="colorOnSurface">@color/gray1</item>
        <item name="backgroundTint">@color/gray4</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
    </style>
</resources>