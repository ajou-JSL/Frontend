<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_item_main_performance_top"
    android:layout_width="200dp"
    android:layout_height="225dp"
    android:background="@drawable/background_more_rounded_white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/performance_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_main_performance"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:background="@drawable/background_top_more_rounded_gray_size_fit"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_gradient"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:background="@drawable/gradient_top_rounded_black_transparent"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/textview_main_performance_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공연 이름"
            android:maxWidth="180dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray7"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/imageview_main_performance"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_main_performance_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강원도 태백산"
            android:textColor="@color/gray4"
            android:textSize="12sp"
            android:maxWidth="100dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/textview_main_performance_name"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_main_performance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24.07.12"
            android:maxWidth="100dp"
            android:breakStrategy="simple"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/gray4"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/textview_main_performance_place"
            app:layout_constraintStart_toEndOf="@id/textview_main_performance_place"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>