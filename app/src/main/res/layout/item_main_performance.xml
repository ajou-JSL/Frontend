<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_item_main_performance_top"
    android:layout_width="200dp"
    android:layout_height="225dp"
    android:background="@drawable/background_more_rounded_white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imageview_main_performance"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:background="@drawable/background_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/imageview_gradient"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:background="@drawable/gradient_black_transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/textview_main_performance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공연 이름"
        android:textColor="@color/gray7"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/imageview_main_performance"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_main_performance_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성남아트홀"
        android:textColor="@color/gray4"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/textview_main_performance_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_main_performance_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24.07.12"
        android:textColor="@color/gray4"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/textview_main_performance_place"
        app:layout_constraintStart_toEndOf="@id/textview_main_performance_place"/>




</androidx.constraintlayout.widget.ConstraintLayout>