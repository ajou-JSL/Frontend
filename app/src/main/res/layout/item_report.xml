<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/button_report"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:background="@drawable/background_white_underline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textview_report_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="콘텐츠 신고"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/gray4"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/textview_report_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="처리중"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/neon_mint_bold"
            android:includeFontPadding="false"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/textview_report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-11-10"
            android:textSize="10sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/gray4"
            android:includeFontPadding="false"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>