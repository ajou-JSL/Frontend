<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SignupProfileActivity"
    tools:context=".view.auth.SignupProfileActivity">
    <data>
        <!-- ViewModel을 위한 variable 정의 -->
        <variable
            name="viewModel"
            type="com.example.moum.viewmodel.auth.SignupViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray0"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/footerLayout"
            android:orientation="vertical"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">

                    <LinearLayout
                        android:id="@+id/return_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray0"
                        android:paddingTop="25dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/button_return"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/button_rounded_left"/>

                    </LinearLayout>
                    <TextView
                        android:textColor="@color/gray7"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="개인 프로필을 설정해주세요."
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:layout_marginBottom="15dp"
                        />
                    <TextView
                        android:textColor="@color/gray4"
                        android:textSize="14sp"
                        android:layout_height="30dp"
                        android:layout_width="wrap_content"
                        android:text="프로필"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:src="@drawable/background_rounded_gray"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:id="@+id/signup_profile_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="100dp">

                        <LinearLayout
                            android:id="@+id/placeholder_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:textColor="@color/gray4"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="17dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="닉네임*"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    />
                                <TextView
                                    android:id="@+id/signup_error_nickname"
                                    android:textColor="@color/red"
                                    android:textSize="9sp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text=""
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/signup_placeholder_nickname"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/background_rounded_gray_stroke"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                >
                                <EditText
                                    android:id="@+id/signup_edittext_nickname"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:background="@color/transparent"
                                    android:inputType="text"
                                    android:hint="닉네임을 입력하세요"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray7"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:gravity="center_vertical"
                                    android:text="@={viewModel.signupUser.name}"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/placeholder_profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:textColor="@color/gray4"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="17dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="프로필 사진"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    />
                                <TextView
                                    android:id="@+id/signup_error_profile_image"
                                    android:textColor="@color/red"
                                    android:textSize="9sp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text=""
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imageview_signup_profile"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/background_circle_gray"
                                    android:layout_marginEnd="10dp"/>
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/button_image_upload"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/background_rounded_gray_stroke"
                                    android:layout_weight="1"
                                    android:text="사진 업로드하기"
                                    android:textAlignment="textStart"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/gray3"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:drawableLeft="@drawable/icon_image_alpha"
                                    android:drawablePadding="5dp"/>


                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/placeholder_profile_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:textColor="@color/gray4"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="17dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="한 줄 소개*"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    />
                                <TextView
                                    android:id="@+id/signup_error_profile_description"
                                    android:textColor="@color/red"
                                    android:textSize="9sp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text=""
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/signup_placeholder_profile_description"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/background_rounded_gray_stroke"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"                            >
                                <EditText
                                    android:id="@+id/signup_edittext_profile_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:background="@color/transparent"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:inputType="textMultiLine"
                                    android:scrollHorizontally="true"
                                    android:hint="한 줄 소개를 입력하세요"
                                    android:textColor="@color/gray7"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:text="@={viewModel.signupUser.profileDescription}"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/placeholder_instrument"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:textColor="@color/gray4"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="17dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="연주 악기 또는 분야*"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    />
                                <TextView
                                    android:id="@+id/signup_error_instrument"
                                    android:textColor="@color/red"
                                    android:textSize="9sp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text=""
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/signup_placeholder_instrument"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/background_rounded_gray_stroke"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"                            >
                                <EditText
                                    android:id="@+id/signup_edittext_instrument"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:background="@color/transparent"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:inputType="text"
                                    android:hint="연주 악기 또는 분야를 입력하세요"
                                    android:textColor="@color/gray7"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:text="@={viewModel.signupUser.instrument}"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/placeholder_proficiency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:textColor="@color/gray4"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="17dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="숙련도*"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    />
                                <TextView
                                    android:id="@+id/signup_error_proficiency"
                                    android:textColor="@color/red"
                                    android:textSize="9sp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text=""
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>

                            <Spinner
                                android:id="@+id/spinner_proficiency"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/background_spinner"
                                android:spinnerMode="dropdown"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/placeholder_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:textColor="@color/gray4"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="17dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="활동 지역"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    />
                                <TextView
                                    android:id="@+id/signup_error_address"
                                    android:textColor="@color/red"
                                    android:textSize="9sp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text=""
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>

                            <Spinner
                                android:id="@+id/spinner_address"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/background_spinner"
                                android:spinnerMode="dropdown"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:textColor="@color/gray4"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="17dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="프로필 동영상"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    />

                                <TextView
                                    android:id="@+id/error_video"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:text=""
                                    android:textColor="@color/gray7"
                                    android:textSize="9sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/placeholder_video"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/background_rounded_gray_stroke"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                >
                                <EditText
                                    android:id="@+id/edittext_video"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:background="@color/transparent"
                                    android:inputType="text"
                                    android:hint="유튜브 링크를 입력하세요"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray7"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:gravity="center_vertical"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:text="@={viewModel.signupUser.videoUrl}"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:textColor="@color/gray4"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="17dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="관심 장르(복수 선택)"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    />

                                <TextView
                                    android:id="@+id/error_genres"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:text=""
                                    android:textColor="@color/gray7"
                                    android:textSize="9sp" />
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_genres"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>



                    </LinearLayout>
                    <TextView
                        android:textColor="@color/gray4"
                        android:textSize="14sp"
                        android:layout_height="30dp"
                        android:layout_width="wrap_content"
                        android:text="이력 추가"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:src="@drawable/background_rounded_gray"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:id="@+id/signup_record_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!--여기에 자식 view가 동적으로 추가됨-->

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_add_record"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_gray_ripple"
                        android:layout_weight="1"
                        android:text="추가하기"
                        android:textColor="@color/gray0"
                        android:textSize="14sp"
                        android:fontFamily="@font/noto_sans_kr_semibold">

                    </androidx.appcompat.widget.AppCompatButton>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="15dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_signup_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_neon_mint_bold_ripple"
                android:text="다음"
                android:textColor="@color/gray0"
                android:textSize="14sp"
                android:fontFamily="@font/noto_sans_kr_semibold"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout></layout>