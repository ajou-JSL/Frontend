<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MoumMapPracticeroomActivity"
    tools:context=".view.moum.MoumMapPracticeroomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_chat_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray0">

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/background_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/button_return"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/button_rounded_left"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="연습실 찾기"
                        android:fontFamily="@font/noto_sans_kr_semibold"
                        android:textColor="@color/gray7"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/gray1"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/headerLayout"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/map_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:name="com.naver.maps.map.MapFragment"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_top_extramore_rounded_white"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="30dp"
                        android:elevation="5dp"
                        android:layout_marginTop="230dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="30dp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/textview_practiceroom_name"
                                android:textColor="@color/gray6"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="장소 이름"
                                android:maxWidth="200dp"
                                android:gravity="bottom"
                                android:layout_gravity="bottom"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/noto_sans_kr_extrabold"
                                android:layout_margin="5dp"
                                />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button_goto_naver_map"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:enabled="false"
                                android:background="@drawable/button_white_ripple"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                android:text="네이버 지도에서 보기"
                                android:includeFontPadding="false"
                                android:textColor="@color/gray4"
                                android:textSize="10sp"
                                android:elevation="8dp"
                                android:drawablePadding="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:drawableRight="@drawable/icon_naver_map_resize"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageview_practiceroom"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/background_more_rounded_gray_size_fit2"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button_add_in_moum"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/button_neon_mint_bold_ripple"
                            android:fontFamily="@font/noto_sans_kr_semibold"
                            android:text="모음에 등록하기"
                            android:textColor="@color/gray0"
                            android:textSize="14sp"
                            android:elevation="5dp"
                            android:layout_margin="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginBottom="50dp">

                            <TextView
                                android:textColor="@color/gray4"
                                android:textSize="14sp"
                                android:layout_height="30dp"
                                android:layout_width="wrap_content"
                                android:text="장소 정보"
                                android:gravity="bottom"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:src="@drawable/background_rounded_gray"
                                android:layout_marginBottom="20dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="시간 당 가격: "
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/textview_practiceroom_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가격"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="최대 수용인원: "
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/textview_practiceroom_capacity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가격"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="주소: "
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/textview_practiceroom_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가격"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="소유주: "
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>

                                <TextView
                                    android:id="@+id/textview_practiceroom_owner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:layout_marginLeft="5dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:text="가격"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전화번호: "
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/textview_practiceroom_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가격"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="이메일: "
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/textview_practiceroom_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가격"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="100dp">
                            <TextView
                                android:textColor="@color/gray4"
                                android:textSize="14sp"
                                android:layout_height="30dp"
                                android:layout_width="wrap_content"
                                android:text="시설 및 물품 정보"
                                android:gravity="bottom"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:src="@drawable/background_rounded_gray"
                                android:layout_marginBottom="20dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="보면대 개수: "
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/textview_practiceroom_stand"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:text="피아노"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <CheckBox
                                    android:id="@+id/checkbox_practiceroom_piano"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="없음"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:enabled="false"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:text="앰프"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <CheckBox
                                    android:id="@+id/checkbox_practiceroom_amp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="없음"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:enabled="false"

                                    android:maxLines="1"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"
                                    android:text="스피커"
                                    android:textSize="14sp" />

                                <CheckBox
                                    android:id="@+id/checkbox_practiceroom_speaker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:text="없음"
                                    android:enabled="false"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:text="마이크"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <CheckBox
                                    android:id="@+id/checkbox_performance_hall_mic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="없음"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:enabled="false"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:text="드럼"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>
                                <CheckBox
                                    android:id="@+id/checkbox_practiceroom_drum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="없음"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:enabled="false"
                                    android:fontFamily="@font/noto_sans_kr_regular"
                                    android:includeFontPadding="false"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp">
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>