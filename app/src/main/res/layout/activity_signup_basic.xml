<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SignupBasicActivity"
    tools:context=".view.SignupBasicActivity">
    <data>
        <!-- ViewModel을 위한 variable 정의 -->
        <variable
            name="viewModel"
            type="com.example.moum.viewmodel.SignupViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingBottom="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <LinearLayout
                    android:id="@+id/return_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray0"
                    android:paddingTop="25dp"
                    android:paddingBottom="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/button_return"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/button_rounded_left"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/rsnejk492kl8"
                    android:textColor="@color/gray7"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="회원가입을 진행중이에요."
                    android:fontFamily="@font/noto_sans_kr_bold"
                    />
                <LinearLayout
                    android:id="@+id/signup_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/placeholder_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom">
                            <TextView
                                android:textColor="@color/gray4"
                                android:textSize="14sp"
                                android:layout_marginEnd="17dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="이름*"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                />
                            <TextView
                                android:textColor="@color/red"
                                android:textSize="9sp"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/background_rounded_gray_stroke"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            >
                            <EditText
                                android:id="@+id/signup_edittext_name"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:background="@color/transparent"
                                android:inputType="text"
                                android:hint="이름을 입력하세요"
                                android:textSize="14sp"
                                android:textColor="@color/gray7"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                android:gravity="center_vertical"
                                android:text="@={viewModel.user.name}"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/placeholder_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom">
                            <TextView
                                android:textColor="@color/gray4"
                                android:textSize="14sp"
                                android:layout_marginEnd="17dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="아이디*"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                />
                            <TextView
                                android:textColor="@color/red"
                                android:textSize="9sp"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/background_rounded_gray_stroke"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"                            >
                        <EditText
                            android:id="@+id/signup_edittext_id"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:inputType="text"
                            android:hint="아이디를 입력하세요"
                            android:textColor="@color/gray7"
                            android:textSize="14sp"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:gravity="center_vertical"
                            android:text="@={viewModel.user.id}"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/placeholder_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom">
                            <TextView
                                android:textColor="@color/gray4"
                                android:textSize="14sp"
                                android:layout_marginEnd="17dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="비밀번호*"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                />
                            <TextView
                                android:textColor="@color/red"
                                android:textSize="9sp"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/background_rounded_gray_stroke"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"                            >
                        <EditText
                            android:id="@+id/signup_edittext_password"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:inputType="textPassword"
                            android:hint="비밀번호를 입력하세요"
                            android:textColor="@color/gray7"
                            android:textSize="14sp"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:gravity="center_vertical"
                            android:text="@={viewModel.user.password}"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/placeholder_password_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom">
                            <TextView
                                android:textColor="@color/gray4"
                                android:textSize="14sp"
                                android:layout_marginEnd="17dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="비밀번호 확인*"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                />
                            <TextView
                                android:textColor="@color/red"
                                android:textSize="9sp"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/background_rounded_gray_stroke"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"                            >

                            <EditText
                                android:id="@+id/signup_edittext_password_check"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:background="@color/transparent"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                android:gravity="center_vertical"
                                android:hint="비밀번호 확인을 입력하세요"
                                android:inputType="textPassword"
                                android:textColor="@color/gray7"
                                android:textSize="14sp"
                                android:text="@={viewModel.user.passwordCheck}"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/placeholder_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom">
                            <TextView
                                android:textColor="@color/gray4"
                                android:textSize="14sp"
                                android:layout_marginEnd="17dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="이메일*"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                />
                            <TextView
                                android:textColor="@color/red"
                                android:textSize="9sp"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/background_rounded_gray_stroke"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            >

                            <EditText
                                android:id="@+id/signup_edittext_email"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:background="@color/transparent"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                android:gravity="center_vertical"
                                android:hint="이메일을 입력하세요"
                                android:inputType="text"
                                android:textColor="@color/gray7"
                                android:textSize="14sp"
                                android:text="@={viewModel.user.email}"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/placeholder_email_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom">
                            <TextView
                                android:textColor="@color/gray4"
                                android:textSize="14sp"
                                android:layout_marginEnd="17dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="이메일 인증코드*"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                />
                            <TextView
                                android:textColor="@color/red"
                                android:textSize="9sp"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:background="@drawable/background_rounded_gray_stroke"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:layout_weight="2">

                                <EditText
                                    android:id="@+id/signup_edittext_email_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:background="@color/transparent"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:gravity="center_vertical"
                                    android:hint="인증코드 6자리"
                                    android:inputType="numberPassword"
                                    android:textColor="@color/gray7"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/button_email_auth"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/background_rounded_gray"
                                android:layout_weight="1"
                                android:text="코드 전송"
                                android:textColor="@color/gray0"
                                android:textSize="14sp"
                                android:fontFamily="@font/noto_sans_kr_semibold">

                            </androidx.appcompat.widget.AppCompatButton>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray0"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkbox_personal_agreement"
                android:layout_width="15dp"
                android:layout_height="20dp" />
            <TextView
                android:textColor="@color/gray4"
                android:textSize="15sp"
                android:fontFamily="@font/noto_sans_kr_semibold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="(필수) 개인정보 활용 동의"
                android:layout_gravity="center_vertical"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_angle_right"
                android:alpha="0.3"/>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_signup_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_rounded_neon_mint"
            android:text="다음"
            android:textColor="@color/gray0"
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans_kr_semibold"/>

        
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout></layout>