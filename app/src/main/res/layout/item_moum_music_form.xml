<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="bottom">
            <TextView
                android:textColor="@color/gray4"
                android:textSize="14sp"
                android:layout_marginEnd="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="곡 이름*"
                android:fontFamily="@font/noto_sans_kr_regular"
                />
            <TextView
                android:id="@+id/error_music_name"
                android:textColor="@color/red"
                android:textSize="9sp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text=""
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/placeholder_music_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_rounded_gray_stroke"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >
            <EditText
                android:id="@+id/edittext_music_name"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/transparent"
                android:inputType="text"
                android:hint="곡 이름을 입력하세요"
                android:textSize="14sp"
                android:textColor="@color/gray7"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15dp">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

            <TextView
            android:textColor="@color/gray4"
            android:textSize="14sp"
            android:layout_marginEnd="17dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="아티스트 이름*"
            android:fontFamily="@font/noto_sans_kr_regular"
            />
             <TextView
             android:id="@+id/error_artist_name"
            android:textColor="@color/red"
            android:textSize="9sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:layout_gravity="center_vertical"
            />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/placeholder_artist_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/background_rounded_gray_stroke"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                >
                <EditText
                    android:id="@+id/edittext_artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/transparent"
                    android:inputType="text"
                    android:hint="이력 이름을 입력하세요"
                    android:textSize="14sp"
                    android:textColor="@color/gray7"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:gravity="center_vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
