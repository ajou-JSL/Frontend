<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TeamProfileFragment"
    tools:context=".view.profile.TeamProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="100dp"
        android:background="@drawable/background_white">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/background_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:contentInsetStart="0dp">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/dropdown_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_ellipsis_vertical"
                    android:scaleType="fitCenter"
                    android:alpha="0.7"/>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            android:background="@drawable/background_more_rounded_gray_size_fit"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/border_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/border_more_rounded_size_fit"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearlayout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/imageview_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/textview_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단체 이름"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"/>
            <ImageView
                android:id="@+id/imageview_tier"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_trophy"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_category_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분야 | 활동 지역"
            android:textSize="12sp"
            android:textColor="@color/gray7"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/linearlayout_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="350dp"
            android:breakStrategy="simple"
            android:text="소개"
            android:textSize="12sp"
            android:textColor="@color/gray7"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/textview_category_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/button_chat_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단체장과의 톡 시작하기"
            android:textAllCaps="false"
            android:drawableStart="@drawable/icon_bubble_mark_white"
            android:backgroundTint="@color/gray7"
            android:textColor="@color/gray0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textview_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layout_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/button_chat_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:autoPlay="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layout_youtube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이력"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textColor="@color/gray4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="@drawable/line_dash"
                android:layerType="software"
                android:layout_marginBottom="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_records"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/gray0"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mebers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layout_records"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="멤버"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textColor="@color/gray4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="@drawable/line_dash"
                android:layerType="software"
                android:layout_marginBottom="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_members"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/gray0"
                android:orientation="horizontal"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>