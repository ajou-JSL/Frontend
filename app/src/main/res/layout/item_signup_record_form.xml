<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <LinearLayout
        android:id="@+id/placeholder_record_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <TextView
                android:textColor="@color/gray4"
                android:textSize="14sp"
                android:layout_marginEnd="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="이력*"
                android:fontFamily="@font/noto_sans_kr_regular" />

            <TextView
                android:textColor="@color/red"
                android:textSize="9sp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:layout_gravity="center_vertical" />

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/button_record_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_circle_xmark"
                    android:scaleType="fitCenter"
                    android:alpha="0.7" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_placeholder_record_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_rounded_gray_stroke"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/signup_edittext_record_name"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/transparent"
                android:inputType="text"
                android:hint="이력 이름을 입력하세요"
                android:textSize="14sp"
                android:textColor="@color/gray7"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/placeholder_record_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <TextView
                android:textColor="@color/gray4"
                android:textSize="14sp"
                android:layout_marginEnd="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="이력 날짜*"
                android:fontFamily="@font/noto_sans_kr_regular" />

            <TextView
                android:textColor="@color/red"
                android:textSize="9sp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text=""
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_record_date_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_rounded_gray_stroke"
                android:layout_weight="1"
                android:text="시작 날짜"
                android:textAlignment="textStart"
                android:paddingLeft="10dp"
                android:textColor="@color/gray3"
                android:textSize="14sp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:drawableLeft="@drawable/icon_calendar_days_alpha"
                android:drawablePadding="5dp"
                android:layout_marginRight="5dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_record_date_end"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_rounded_gray_stroke"
                android:layout_weight="1"
                android:text="종료 날짜"
                android:textAlignment="textStart"
                android:paddingLeft="10dp"
                android:textColor="@color/gray3"
                android:textSize="14sp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:drawableLeft="@drawable/icon_calendar_days_alpha"
                android:drawablePadding="5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
