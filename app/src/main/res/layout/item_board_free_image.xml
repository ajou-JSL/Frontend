<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray0">

    <LinearLayout
        android:id="@+id/item_board_free_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_board_free_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"

                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:text="제목"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/item_board_free_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="작성자"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_board_free_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"

                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:textColor="@color/gray4"
                android:text="시간"
                android:textSize="14sp" />
        </LinearLayout>

    <ImageView
        android:id="@+id/item_board_free_image_view"
        android:layout_weight="1"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginEnd="25dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/background_rounded_gray">
    </ImageView>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>